{{#news}}
<div class="row news-content">
    <div class="col-sm-4">
        <div class="content-meta">
            <div class="date">
                <span class="month">{{ month }}</span>
                <span class="day">{{ day }}</span>
            </div>
        </div>
    </div>
    <div class="col-sm-20">
        <div class="content-inner">
            <span class="flex-column" style="height: 100%;">
                <h4 class="content-title"><a href="{{ link }}" class="content-link">{{ title }}</a></h4>
                {{ #image }} <img src="{{image}}" alt="{{title}}">{{/image}}
                <p class="content-summary">{{ body }}</p>
                <p class="news-footer">
                    <a href="{{ link }}" class="content-link read-more">Continue reading</a>
                    <span class="summary-icons">
                        | 
                        <a class="nav-item" href="https://www.facebook.com/sharer/sharer.php?u={{ link }}" title="Share on Facebook"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                        <a class="nav-item" href="https://www.linkedin.com/shareArticle?mini=true&amp;url={{ link }}" title="Share on LinkedIn"><i class="fa fa-linkedin" aria-hidden="true"></i></a>
                        <a class="nav-item" href="https://twitter.com/home?status={{ link }}" title="Tweet this"><i class="fa fa-twitter"></i></a>
                    </span>
                </p>
            </span>
        </div>
    </div>
</div>

{{/news}} 

